<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FysioApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/Content/Site.css"/>
</head>
<body>
    <header class="jumbotron-fluid">
            <div class="text-center col">
                <img alt="Avans Fysio Logo" class=" img-thumbnail" style="max-height: 100px; background-color: #DB6D48; border-color: #DB6D48;" src="https://i.imgur.com/EjwTjrh.png" />
                <h1>Avans Fysio</h1>
                <p class="lead">Jouw plek voor Avans Fysiotherapie</p>
            </div>
            <div class="container">
                <div class="navbar">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <partial name="_loginPartial" />
                    </ul>
                </div>
            </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - FysioApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy </a> - @await Component.InvokeAsync("TotalPatients")
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
