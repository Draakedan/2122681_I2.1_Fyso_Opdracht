@model Adress
@{
    ViewData["Title"] = "Maak nieuwe dossier aan";
}

<div class="container">
    <form class="form-group" asp-action="NewAdress" method="post">
        <label asp-for="Country">Land:</label>
        <div><span asp-validation-for="Country" class="text-danger"></span></div>
        <input asp-for="Country" class="form-control" type="text" />

        <label asp-for="City">Stad:</label>
        <div><span asp-validation-for="City" class="text-danger"></span></div>
        <input asp-for="City" class="form-control" type="text" />

        <label asp-for="PostalCode">Postcode:</label>
        <div><span asp-validation-for="PostalCode" class="text-danger"></span></div>
        <input asp-for="PostalCode" class="form-control" type="text" />

        <label asp-for="Street">Straat naam:</label>
        <div><span asp-validation-for="Street" class="text-danger"></span></div>
        <input asp-for="Street" class="form-control" type="text" />

        <label asp-for="HouseNumber">Huis nummer</label>
        <div><span asp-validation-for="HouseNumber" class="text-danger"></span></div>
        <input asp-for="HouseNumber" class="form-control" type="text" />

        <button type="submit" class="btn btn-info">Verder</button>
    </form>
</div>
