@model DatabaseHandler.Models.Patient
@{
    ViewData["Title"] = "Voeg patient toe";
}

<div class="container">
    <form class="form-group" asp-action="NewPatient" method="post">
        <label asp-for="AdressID">Controleer address:</label>
        <label>@Model.AdressID, @Model.Adress.ToString()</label>
        <input asp-for="AdressID" class="invisible" type="number" />

        <label asp-for="Name">Voer naam patient in:</label>
        <div><span asp-validation-for="Name" class="text-danger"></span></div>
        <input asp-for="Name" class="form-control" type="text" />

        <label asp-for="EnsuranceCompany">Voer verzekering in:</label>
        <div><span asp-validation-for="EnsuranceCompany" class="text-danger"></span></div>
        <input asp-for="EnsuranceCompany" class="form-control" type="text" />

        <label asp-for="Email">Voer Email Adress in:</label>
        <div><span asp-validation-for="Email" class="text-danger"></span></div>
        <input asp-for="Email" class="form-control" type="email" />

        <label asp-for="PhoneNumber">Voer telefoonnummer in:</label>
        <input asp-for="PhoneNumber" class="form-control" type="text" />

        <label asp-for="IsMale">Selecteer geslacht:</label>
        <div><span asp-validation-for="IsMale" class="text-danger"></span></div>
        @Html.RadioButtonFor(m => m.IsMale, true) Man
        @Html.RadioButtonFor(m => m.IsMale, false) Vrouw

        <br />

        <label asp-for="IsStudent">Is de patient een student of medewerker?</label>
        <div><span asp-validation-for="IsStudent" class="text-danger"></span></div>
        @Html.RadioButtonFor(m => m.IsStudent, true) Student
        @Html.RadioButtonFor(m => m.IsStudent, false) Medewerker 

        <br />

        <label asp-for="PatientNumber">Voer AvansID in:</label>
        <div><span asp-validation-for="PatientNumber" class="text-danger"></span></div>
        <input asp-for="PatientNumber" class="form-control" type="text" />

        <label asp-for="Birthdate">Voer geboortedatum patient in:</label>
        <div><span asp-validation-for="Birthdate" class="text-danger"></span></div>
        <input asp-for="Birthdate" class="form-control" type="date" />

        <button type="submit" class="btn btn-info">Toevoegen</button>
    </form>
</div>
