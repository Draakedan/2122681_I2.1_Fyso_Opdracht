@model IEnumerable<Patient>
@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <button class="btn btn-outline-info"><a asp-action="NewPatient">Voeg patient toe</a></button>
    <div class="text-center">
        <h6 class="border-info text-info bg-secondary">Patients</h6>
        <table class="table table-striped table-bordered">
            <thead>
                <tr><th>naam</th><th>ID</th><th>geboorte</th><th>registratie</th></tr>
            </thead>
            <tbody>
                @foreach (Patient p in Model)
                {
                    <partial name="_TablePartial" model="p" />
                }
                </tbody>
        </table>
    </div>
</div>