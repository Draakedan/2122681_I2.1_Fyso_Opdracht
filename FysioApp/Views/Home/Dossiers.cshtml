@model ICollection<PatientFile>
@{
    ViewData["Title"] = "Dossier lijst";
}

<div class="container">
    <a class="btn btn-outline-info" asp-action="NewDossier">Maak nieuwe dossier aan</a>
    <div class="text-center">
        <h6 class="border-info text-info bg-secondary">Patienten dossiers</h6>
        <table class="table table-striped table-bordered">
            <thead>
                <tr><th>naam patient</th><th>patient leeftijd</th><th>gelsacht patient</th><th>diagnose</th><th>hoofdbehandelaar</th><th>datum registratie</th></tr>
            </thead>
            <tbody>
                @foreach (DomainModels.Models.PatientFile file in Model)
                {
                    <partial name="_DossierTablePartial" model="file" />
                }
            </tbody>
        </table>
    </div>
</div>
