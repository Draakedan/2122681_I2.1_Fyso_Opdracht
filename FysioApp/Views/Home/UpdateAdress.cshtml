@model UpdateAdressData
@{
    ViewData["Title"] = "update adress";
}

<div class="container">
    <form class="form-group" asp-action="UpdateAdress" method="post">
        <input asp-for="PatientID" class="invisible" type="number" />

        <label asp-for="Adress.Country">Land:</label>
        <div><span asp-validation-for="Adress.Country" class="text-danger"></span></div>
        <input asp-for="Adress.Country" class="form-control" type="text" />

        <label asp-for="Adress.City">Stad:</label>
        <div><span asp-validation-for="Adress.City" class="text-danger"></span></div>
        <input asp-for="Adress.City" class="form-control" type="text" />

        <label asp-for="Adress.PostalCode">Postcode:</label>
        <div><span asp-validation-for="Adress.PostalCode" class="text-danger"></span></div>
        <input asp-for="Adress.PostalCode" class="form-control" type="text" />

        <label asp-for="Adress.Street">Straat naam:</label>
        <div><span asp-validation-for="Adress.Street" class="text-danger"></span></div>
        <input asp-for="Adress.Street" class="form-control" type="text" />

        <label asp-for="Adress.HouseNumber">Huis nummer</label>
        <div><span asp-validation-for="Adress.HouseNumber" class="text-danger"></span></div>
        <input asp-for="Adress.HouseNumber" class="form-control" type="text" />

        <button type="submit" class="btn btn-info">update</button>
    </form>
</div>
