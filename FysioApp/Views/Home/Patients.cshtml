@*@model IEnumerable<DatabaseHandler.Models.Patient>*@
@model ICollection<Patient>
@{
    ViewData["Title"] = "Patienten lijst";
}

<div class="container">
    <a class="btn btn-outline-info" asp-action="NewPatient">Voeg patient toe</a>
    <div class="text-center">
        <h6 class="border-info text-info bg-secondary">Patienten</h6>
            <table class="table table-striped table-bordered">
                <thead>
                    <tr><th>Naam</th><th>ID</th><th>Leeftijd</th><th>Geboorte</th><th>Registratie</th><th>Onstlag</th></tr>
                </thead>
                <tbody>
                    @foreach (DomainModels.Models.Patient patient in Model)
                    {
                        Console.WriteLine(patient.ToString() + "\n" + patient);
                        <partial name="_PatientTablePartial" model="patient" />
                    }
                </tbody>
            </table>
    </div>
</div>
