@model IEnumerable<DatabaseHandler.Models.Patient>
@{
    ViewData["Title"] = "Patienten lijst";
}

<div class="container">
    <button class="btn btn-outline-info"><a asp-action="NewPatient">Voeg patient toe</a></button>
    <div class="text-center">
        <h6 class="border-info text-info bg-secondary">Patienten</h6>
        <table class="table table-striped table-bordered">
            <thead>
                <tr><th>naam</th><th>ID</th><th>leeftijd</th><th>geboorte</th><th>registratie</th><th>onstlag</th></tr>
            </thead>
            <tbody>
                @foreach (DatabaseHandler.Models.Patient patient in Model)
                {
                    Console.WriteLine(patient.ToString() + "\n" + patient);
                    <partial name="_TablePartial" model="patient" />
                }
            </tbody>
        </table>
    </div>
</div>
